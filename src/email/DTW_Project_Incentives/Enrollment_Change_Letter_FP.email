<messaging:emailTemplate subject="{!$Label.DTWECLFP1}" recipientType="User" relatedToType="ParticipantAcknowledgement__c">
<messaging:htmlEmailBody >
    <apex:outputpanel >
        <p>{!$label.DTWDTWECLTM1}{!relatedTo.ParticipantID__r.EnrollmentPlan__r.ReplyTo__c}.
        {!$label.DTWDTWECLTM2}</p>
        
        <p>{!$label.DTWProjectNumber}  {!relatedTo.ProjectNumber__c} </p>
        <p>{!$label.DTWProjectName}  {!relatedTo.ProjectName__c}</p>
        <p>{!$label.DTWCustomerName}  {!relatedTo.ClientName__c}</p>
        
        <p>{!$label.DTWDTWECLTM3} &nbsp;<apex:outputtext escape="false" value="{!relatedTo.AcknowledgementURL__c}" />   
        {!$label.DTWELT3}</p>
        
        <p>{!$label.DTWELT4} &nbsp;<apex:outputtext escape="false" value="{!relatedTo.DTWFixedPricePlanEmployeeGuide__c}" /> {!$label.DTWELT5} &nbsp;<apex:outputtext escape="false" value="{!relatedTo.DTWWebpage__c}" /> {!$Label.DTWELT6}</p>
        
        <p>{!$Label.DTWTHANKYOU}</p>
        
        <p>!$Label.DTWAdministrator}</p>
        <p>{!relatedTo.ParticipantID__r.EnrollmentPlan__r.ReplyTo__c}</p>
    </apex:outputpanel>
</messaging:htmlEmailBody>
    
    <messaging:plainTextEmailBody >
        {!$Label.DTWDTWECLTM1}{!relatedTo.ParticipantID__r.EnrollmentPlan__r.ReplyTo__c}.
        {!$Label.DTWDTWECLTM2}
        
        {!$Label.DTWProjectNumber}  {!relatedTo.ProjectNumber__c} 
        
        {!$Label.DTWProjectName}  {!relatedTo.ProjectName__c} 
        
        {!$Label.DTWCustomerName} {!relatedTo.ClientName__c} 
        
        Your new personalized enrollment letter is attached,which includes project specific metrics and an overview of the plan is available by clicking here. Please review this enrollment letter, and click the Participant Acknowledgement within 7 days to indicate your receipt and participation in the plan. 
        
        {!$Label.DTWELT4} {!relatedTo.DTWFixedPricePlanEmployeeGuideURL__c} {!$Label.DTWELT5} {!relatedTo.DTWWebpageURL__c}.         
        
        {!$Label.DTWTHANKYOU}
        
       {!$Label.DTWAdministrator}   
        
        {!relatedTo.ParticipantID__r.EnrollmentPlan__r.ReplyTo__c}
    </messaging:plainTextEmailBody>      

<messaging:attachment renderAs="PDF" filename="{!relatedTo.ProjectNumber__c}-{!relatedTo.ParticipantID__r.EmployeeName__r.name}-DTWLetter-{!YEAR(TODAY())}{!RIGHT(TEXT(MONTH(TODAY())+100),2)}{!RIGHT(TEXT(DAY(TODAY())+100),2)}.pdf">
    <c:INC_EnrollmentLetterComponent EP="{!relatedTo.ParticipantID__c}" pa="{!relatedTo}" />
</messaging:attachment>
</messaging:emailTemplate>