							<apex:selectList size="1" value="{!sFilterCriteria}">
								<apex:selectOptions value="{!lPlanElements}" />
								<apex:actionSupport rerender="projectTeamPanel" event="onchange" action="{!refresh}" />
							</apex:selectList>
						</div>
 -->
