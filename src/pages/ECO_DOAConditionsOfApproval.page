<apex:page standardController="DOAConditions__c" extensions="ECO_DOAConditionsOfApprovalController" action="{!init}">
	<style>
    	.hideDropdown select{
            display:none !important;
        }
    </style>
    
    <apex:form >
	<apex:sectionHeader title="DOA Conditions of Approval Edit" subtitle="{!agreement.ContractTitle__c}({!agreement.AgreementNumber__c})" rendered="{!IF(agreement.ContractTitle__c != null,true,false)}"/>
	<apex:sectionHeader title="DOA Conditions of Approval Edit" rendered="{!IF(agreement.ContractTitle__c == null,true,false)}"/>
    <apex:pageBlock title="DOA Conditions of Approval Edit">

	<apex:pageBlockButtons >
		<apex:commandButton value="Save" action="{!save}"/>
		<!--<apex:commandButton value="Return to MSA" action="{!returnToDOA}" rendered="{!IF(doaConditions.DOAApprovalRequest__c == null,true,false)}"/>
        <apex:commandButton value="Return to DOA" action="{!returnToDOA}" rendered="{!IF(doaConditions.DOAApprovalRequest__c == null,false,true)}"/>-->
        <apex:commandButton action="{!Cancel}" value="Return" rendered="{!NOT(lockFields)}"/>
	</apex:pageBlockButtons>
	<apex:pageBlockSection collapsible="false" rendered="{!NOT(lockFields)}">
		<apex:pageBlockSectionItem rendered="{!NOT(lockFields)}">
			<apex:outputText value="DOA Condition"/>
			<apex:inputField value="{!DOAConditions__c.Name}" />
        </apex:pageBlockSectionItem>
        <apex:inputField value="{!DOAConditions__c.DOAApprovalRequest__c}" rendered="{!NOT(lockFields)}"/>
        <!--<apex:inputField value="{!DOAConditions__c.DOARegister__c}" rendered="{!IF(DoaApprovalId == null,true,false)}"/>-->
        <apex:inputField value="{!DOAConditions__c.Project__c}" rendered="{!AND(IF(DOAConditions__c.Project__c != null,true,false),NOT(lockFields))}" id="proj"/>
        <apex:inputField styleClass="hideDropdown" value="{!DOAConditions__c.CreatedBy__c}" rendered="{!NOT(lockFields)}"/>
    </apex:pageBlockSection>
    <apex:pageBlockSection collapsible="false" rendered="{!lockFields}">
        <apex:pageBlockSectionItem >
			<apex:outputText value="DOA Condition"/>
			<apex:outputField value="{!DOAConditions__c.Name}" />
		</apex:pageBlockSectionItem>
        <apex:outputField value="{!DOAConditions__c.DOAApprovalRequest__c}" />
		<apex:outputField value="{!DOAConditions__c.Project__c}" rendered="{!IF(DOAConditions__c.Project__c != null,true,false)}" id="proj2"/>
        <apex:outputField value="{!DOAConditions__c.CreatedBy__c}" />
    </apex:pageBlockSection>
    <apex:pageBlockSection columns="1">
        <apex:pageBlockSectionItem helpText="{!$ObjectType.DOAConditions__c.fields.Mitigation_Plan__c.InlineHelpText}">
            <apex:outputLabel >Status</apex:outputLabel>
			<apex:inputField value="{!DOAConditions__c.Mitigation_Plan__c}" style="height: 120px;width:100%;"
            	html-placeholder="For use by the Project Manager only to document the status of condition of approval, such as actions taken to comply with the condition, during the project execution. ORM will use this field to assess and track Project Manager's compliance with the condition of approval."/>
        </apex:pageBlockSectionItem>
    </apex:pageBlockSection>
    
	<apex:inputHidden value="{!DOAConditions__c.Agreement__c}"/>
<!--	<apex:pageBlockSection title="System Information" collapsible="false">
		<apex:outputField value="{!OtherDirectCost__c.Agreement__c}"/>
	</apex:pageBlockSection> -->

</apex:pageBlock>
</apex:form>
</apex:page>